<style>
  :root{
    --bg:#0b0f14;
    --card:#101826;
    --muted:#7b8aa0;
    --text:#e6edf6;
    --ok:#2dd4bf;
    --bad:#fb7185;
    --warn:#fbbf24;
    --line:#1c2a3d;
    --chip:#0f2334;
  }

  *{box-sizing:border-box}

  body{
    margin:0;
    font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial;
    background: radial-gradient(1200px 800px at 15% 10%, #0f2334 0%, var(--bg) 55%);
    color:var(--text);
  }

  a{
    color:var(--ok);
    text-decoration:none;
  }

  .wrap{
    max-width:1100px;
    margin:0 auto;
    padding:24px;
  }

  /* ================= TOP BAR ================= */

  .top{
    display:flex;
    align-items:center;
    justify-content:space-between;
    gap:20px;
    margin-bottom:24px;
    flex-wrap:wrap;
  }

  .brand{
    display:flex;
    align-items:center;
    gap:16px;
  }

  .logo{
    font-size:32px;
    font-weight:900;
    letter-spacing:.8px;
    background:linear-gradient(135deg,#2dd4bf,#22c55e);
    -webkit-background-clip:text;
    -webkit-text-fill-color:transparent;
  }

  .brand h1{
    font-size:20px;
    margin:0;
    letter-spacing:.4px;
  }

  .nav{
    display:flex;
    gap:10px;
    flex-wrap:wrap;
  }

  .btn{
    padding:8px 14px;
    border-radius:12px;
    border:1px solid var(--line);
    background:rgba(16,24,38,.7);
    color:var(--text);
    font-size:13px;
    font-weight:600;
    transition:.2s ease;
  }

  .btn:hover{
    background:rgba(16,24,38,1);
    border-color:var(--ok);
  }

  .btn.primary{
    background:rgba(45,212,191,.15);
    border-color:rgba(45,212,191,.35);
    color:var(--ok);
  }

  /* ================= GRID ================= */

  .grid{
    display:grid;
    grid-template-columns: 1.2fr .8fr;
    gap:16px;
  }

  @media (max-width: 900px){
    .grid{
      grid-template-columns:1fr;
    }
  }

  /* ================= CARDS ================= */

  .card{
    background:rgba(16,24,38,.92);
    border:1px solid var(--line);
    border-radius:20px;
    box-shadow:0 12px 35px rgba(0,0,0,.45);
    padding:18px;
  }

  .title{
    font-size:14px;
    color:var(--muted);
    margin:0 0 12px;
    letter-spacing:.4px;
  }

  .row{
    display:flex;
    gap:10px;
    flex-wrap:wrap;
    align-items:center;
  }

  .pill{
    padding:6px 12px;
    border-radius:999px;
    font-size:12px;
    border:1px solid var(--line);
    background:rgba(15,35,52,.6);
    display:inline-flex;
    gap:8px;
    align-items:center;
  }

  .dot{
    width:8px;
    height:8px;
    border-radius:999px;
    background:var(--warn);
  }

  .dot.ok{background:var(--ok)}
  .dot.bad{background:var(--bad)}

  .kv{
    display:grid;
    grid-template-columns:160px 1fr;
    gap:10px 14px;
    font-size:13px;
    padding-top:8px;
  }

  .k{
    color:var(--muted);
  }

  .v code{
    background:var(--chip);
    padding:2px 6px;
    border-radius:8px;
    border:1px solid var(--line);
  }

  /* ================= PLAYERS ================= */

  .list{
    display:flex;
    flex-direction:column;
    gap:12px;
    margin-top:12px;
  }

  .player{
    border:1px solid var(--line);
    border-radius:16px;
    padding:12px 14px;
    background:rgba(11,15,20,.45);
    display:flex;
    justify-content:space-between;
    gap:12px;
    transition:.2s ease;
  }

  .player:hover{
    border-color:var(--ok);
    background:rgba(15,35,52,.6);
  }

  .player .name{
    font-weight:700;
    font-size:14px;
  }

  .player .meta{
    color:var(--muted);
    font-size:12px;
  }

  .mono{
    font-family:ui-monospace,SFMono-Regular,Menlo,Monaco,Consolas,"Liberation Mono",monospace;
  }

  .footer{
    margin-top:20px;
    color:var(--muted);
    font-size:12px;
  }

  /* ================= MOBILE HEADER ================= */

  @media (max-width:720px){

    .top{
      flex-direction:column;
      align-items:flex-start;
      gap:16px;
    }

    .nav{
      width:100%;
      padding-top:14px;
      border-top:1px solid var(--line);
    }

    .btn{
      flex:1;
      text-align:center;
    }
  }

</style>
